{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serviceLocation": {
            "type": "string"
        },
        "serviceName": {
            "type": "string"
        },
        "serviceIPRangePrefix": {
            "type": "string"
        }

    },
    "variables": {
        "serviceIPRange": "[concat(parameters('serviceIPRangePrefix'),'0.0/16')]"
    },
    "resources": [
            {
                "name": "[concat('vnet-',parameters('serviceName'),'-',parameters('serviceLocation'),'prod-001')]",
                "type": "Microsoft.Network/virtualNetworks",
                "apiVersion": "2018-08-01",
                "location": "[resourceGroup().location]",
                "tags": {
                    "displayName": "[concat('vnet-',parameters('serviceName'),'-',parameters('serviceLocation'),'prod')]"
                },
                "properties": {
                    "addressSpace": {
                        "addressPrefixes": [
                            "[concat(variables('serviceIPRange'))]"
                        ]
                    },
                    "subnets": [
                        {
                            "name": "[concat('snet-',parameters('serviceName'),'-','hostpool-prod-001')]",
                            "properties": {
                                "addressPrefix": "[concat(parameters('serviceIPRangePrefix'),'1.0/24')]"
                            }
                        },
                        {
                            "name": "[concat('snet-',parameters('serviceName'),'-backend-prod-001')]",
                            "properties": {
                                "addressPrefix": "[concat(parameters('serviceIPRangePrefix'),'2.0/24')]"
                            }
                        }
                    ]
                }
            },
            {
               "name": "nsg-rdpallow-001",
               "type": "Microsoft.Network/networkSecurityGroups",
               "apiVersion": "2018-08-01",
               "location": "[resourceGroup().location]",
               "properties": {
                   "securityRules": [
                       {
                           "name": "nsgRDPRule",
                           "properties": {
                               "description": "description",
                               "protocol": "Tcp",
                               "sourcePortRange": "*",
                               "destinationPortRange": "3389",
                               "sourceAddressPrefix": "*",
                               "destinationAddressPrefix": "*",
                               "access": "Allow",
                               "priority": 100,
                               "direction": "Inbound"
                           }
                       }
                   ]
               }
           },
           {
               "type": "Microsoft.KeyVault/vaults",
               "apiVersion": "2018-02-14",
               "name": "[uniqueString(resourceGroup().id, parameters('serviceName'))]",
               "location": "[resourceGroup().location]",
               "tags": {
                   "displayName": "[uniqueString(resourceGroup().id, parameters('serviceName'))]"
               },
               "properties": {
                   "enabledForDeployment": true,
                   "enabledForTemplateDeployment": true,
                   "enabledForDiskEncryption": true,
                   "tenantId": "b46ac4c7-2123-44f3-bfe7-9790b5ac8a18",
                   "accessPolicies": [
                       {
                           "tenantId": "b46ac4c7-2123-44f3-bfe7-9790b5ac8a18",
                           "objectId": "a17ab816-fd9a-4fc0-808a-3059c8ac5719",
                           "permissions": {
                               "keys": [
                                   "Get" 
                                ],
                               "secrets": [
                                   "List",
                                   "Get",
                                   "Set"
                               ]
                          }
                       },
                       {
                           "tenantId": "b46ac4c7-2123-44f3-bfe7-9790b5ac8a18",
                           "objectId": "260ac6e2-f1e3-466e-84d6-6a1aba844b5b",
                           "permissions": {
                               "keys": [
                                   "Get" 
                                ],
                               "secrets": [
                                   "List",
                                   "Get",
                                   "Set"
                               ]
                          }
                       }
                       
                   ],
                   "sku": {
                       "name": "standard",
                       "family": "A"
                   }
               },
               "resources": [
                   {
                       "type": "secrets",
                       "name": "localwinadmin",
                               "apiVersion": "2016-10-01",
                       "dependsOn": [
                           "[resourceId('Microsoft.KeyVault/vaults', uniqueString(resourceGroup().id, parameters('serviceName')))]"
                       ],
                       "properties": {
                           "value": "Pass@word!123"
                       }
                   }
               ]
           }
        ],
    "outputs": {
    }
}