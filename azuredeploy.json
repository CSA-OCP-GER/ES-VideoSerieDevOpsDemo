{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceName": {
      "type": "string"
    },
    "serviceLocation": {
      "type": "string"
    },
    "serviceIPRangePrefix": {
      "type": "string"
    },
    "localAdminPWD": {
      "type": "securestring"
    }
  },
  "variables": {},
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "name": "[concat('rg-',parameters('serviceName'),'-hp')]",
      "location": "[parameters('serviceLocation')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "name": "[concat('rg-',parameters('serviceName'),'-backend')]",
      "location": "[parameters('serviceLocation')]",
      "properties": {}
    },
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "name": "[concat('rg-',parameters('serviceName'),'-shared')]",
      "location": "[parameters('serviceLocation')]",
      "properties": {}
    },
    {
      "name": "[concat('nesteddeploy-',parameters('serviceName'),'-shared')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "resourceGroup": "[concat('rg-',parameters('serviceName'),'-shared')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/',  concat('rg-',parameters('serviceName'),'-shared'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://raw.githubusercontent.com/CSA-OCP-GER/ES-VideoSerieDevOpsDemo/main', '/infra-shared/infra-shared.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "serviceLocation": {
            "value": "[parameters('serviceLocation')]"
          },
          "serviceName": {
            "value": "[parameters('serviceName')]"
          },
          "serviceIPRangePrefix": {
            "value": "[parameters('serviceIPRangePrefix')]"
          }
        }
      }
    },
    {
      "name": "[concat('nesteddeploy-',parameters('serviceName'),'-backend')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "resourceGroup": "[concat('rg-',parameters('serviceName'),'-backend')]",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups/',  concat('rg-',parameters('serviceName'),'-backend'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://raw.githubusercontent.com/CSA-OCP-GER/ES-VideoSerieDevOpsDemo/main', '/infra-backend/infra-backend.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "serviceLocation": {
            "value": "[parameters('serviceLocation')]"
          },
          "serviceName": {
            "value": "[parameters('serviceName')]"
          },
          "serviceIPRangePrefix": {
            "value": "[parameters('serviceIPRangePrefix')]"
          },
          "localAdminPWD": {
            "value": "[parameters('localAdminPWD')]"
          }
        }
      }
    }
  ],
  "outputs": {}
}
